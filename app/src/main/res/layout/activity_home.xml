<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity_home"
    android:background="@drawable/bg"
    android:layout_alignParentBottom="true"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp">


    <TextView
        android:id="@+id/activity_main"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:background="#800000"
        android:text="SELAMAT DATANG "
        android:textColor="#F0F8FF"
        android:textStyle="bold"
        android:textSize="35sp" />


    <ImageView
        android:id="@+id/img_contoh"
        android:layout_width="wrap_content"
        android:layout_height="173dp"
        android:layout_below="@+id/activity_main"
        android:layout_marginTop="11dp"
        android:src="@drawable/logonongki" />

    <ImageButton
        android:id="@+id/btn_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img_contoh"
        android:layout_gravity="left"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/logobtncari"
        android:onClick="List"
        android:scaleType="centerCrop"
        android:clickable="true"

        />

    <TextView
        android:id="@+id/txt_tempat_nongkrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_img"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:text="Cari Tongkrongan"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img_contoh"
        android:layout_gravity="right"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/btn_img"
        android:background="@drawable/logobtnpeta"
        android:onClick="buka"
        android:scaleType="centerInside"
        android:clickable="true"/>

    <TextView
        android:id="@+id/txt_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_img1"
        android:layout_gravity="center"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/txt_tempat_nongkrong"
        android:text="Temukan Lokasi"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_img"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/logobtn"
        android:onClick="help"
        android:scaleType="centerCrop"
        android:clickable="true"/>

    <TextView
        android:id="@+id/txt_bantuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_img2"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="13dp"
        android:text="Bantuan"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/img_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_img1"
        android:layout_gravity="right"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="57dp"
        android:layout_toRightOf="@+id/btn_img2"
        android:background="@drawable/logobtnabout"
        android:onClick="tentang"
        android:scaleType="centerCrop"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/img_run"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="37dp"

        android:src="@drawable/icon_i" />


    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_img2"
        android:layout_gravity="center"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/txt_bantuan"
        android:text="Tentang Kami"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mywidget"
        android:layout_width="271dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_3"
        android:layout_marginTop="40dp"
        android:background="#95ba9c"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingTop="2dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/running_text"
        android:textColor="#ffffff"
        android:textSize="16sp" />


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">



    </FrameLayout>


</RelativeLayout>
    </ScrollView>