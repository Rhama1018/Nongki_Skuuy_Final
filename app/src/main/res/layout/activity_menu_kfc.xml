        android:layout_marginTop="10dp"
        android:background="@drawable/makanankfc">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#F4A460"
