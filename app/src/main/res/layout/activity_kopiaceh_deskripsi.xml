<?xml version="1.0" encoding="utf-8"?><ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kopiaceh_deskripsi">

    <TextView
        android:id="@+id/txt_kopi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KOPI ACEH"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/warna"
        android:textAlignment="center">
    </TextView>


    <ImageView
        android:id="@+id/img_kopi"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/txt_kopi"
        android:background="@drawable/fotokopiaceh">

    </ImageView>

    <TextView
        android:id="@+id/txt_kopi_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESKRPSI : "
        android:textSize="35dp"
        android:layout_below="@+id/img_kopi"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/txt_isi_kopi_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_fragment"
        android:textSize="20dp"
        android:textColor="@color/warna"
        android:layout_below="@+id/txt_kopi_deskripsi">
    </TextView>

    <TextView
        android:id="@+id/txt_deskripsi_peta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_isi_kopi_deskripsi"
        android:text="ALAMAT"
        android:textStyle="bold"
        android:textSize="35dp">
        </TextView>

    <TextView
        android:id="@+id/isi_deskripsi_peta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_deskripsi_peta"
        android:text="@string/alamat"
        android:textSize="20dp">
    </TextView>


</RelativeLayout>

    </ScrollView>
