<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuKopiActivity">

        <TextView
            android:id="@+id/txt_minuman_kopi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KOPI KULO"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/warna"
            android:textAlignment="center"
            >
        </TextView>

        <TextView
            android:id="@+id/txt_makan_favorit_kopi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minuman Favorite"
            android:textSize="35dp"
            android:layout_below="@+id/txt_minuman_kopi"
            android:textAlignment="center"
            android:background="#F4A460">
        </TextView>

        <ImageView
            android:id="@+id/img_makan_kopi"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_makan_favorit_kopi"
            android:background="@drawable/minumankulo">

        </ImageView>
    </RelativeLayout>
</ScrollView>